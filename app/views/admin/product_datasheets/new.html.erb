<%= render "shared/error_messages", :target => @product_datasheet %>

<%= form_for(@product_datasheet,  :url => admin_product_datasheets_path, :html => { :multipart => true }) do |f| %>
<fieldset>
  <center>
    <%= f.label t(:upload_a_product_datasheet) %>
    <%= f.file_field :xls %>
    <br />
    <%= f.label t(:processor) %>
    <%= f.select(:processor, options_for_select(ProductDatasheetProcessor.all.map{|p| [p[:name], p[:id]]})) %>
  </center>
  <p class="form-buttons" data-hook="buttons">
    <%= button t('actions.create') %>
  </p>
  
</fieldset>
<% end %>
